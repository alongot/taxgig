# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/side_hustle_tracker
DB_HOST=localhost
DB_PORT=5432
DB_NAME=side_hustle_tracker
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=90d

# Plaid Configuration (Sprint 2)
# Get credentials from https://dashboard.plaid.com/developers/keys
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
# For production: Set to your public webhook URL
PLAID_WEBHOOK_URL=

# Stripe Configuration (for Sprint 2)
STRIPE_SECRET_KEY=your_stripe_secret_key

# AWS S3 Configuration (for receipt storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=side-hustle-receipts

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@sidehustletracker.com

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URLs
WEB_APP_URL=http://localhost:3000
MOBILE_APP_SCHEME=sidehustletracker

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
